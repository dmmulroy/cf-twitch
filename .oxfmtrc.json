{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"useTabs": true,
	"tabWidth": 2,
	"printWidth": 100,
	"semi": true,
	"singleQuote": false,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"experimentalSortImports": {
		"order": "asc",
		"ignoreCase": true,
		"newlinesBetween": true,
		"groups": [["builtin", "external"], ["internal"], ["parent", "sibling", "index"], ["type"]],
		"internalPattern": ["~/**", "@/**"]
	},
	"ignorePatterns": ["node_modules", "dist", "*.d.ts", "opensrc", "pnpm-lock.yaml"]
}
