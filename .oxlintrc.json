{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"plugins": ["typescript", "import", "promise"],
	"env": {
		"browser": true,
		"es2024": true
	},
	"globals": {
		"DurableObject": "readonly",
		"DurableObjectState": "readonly",
		"DurableObjectId": "readonly",
		"DurableObjectNamespace": "readonly",
		"DurableObjectStub": "readonly",
		"DurableObjectStorage": "readonly",
		"Workflow": "readonly",
		"Queue": "readonly",
		"AnalyticsEngineDataset": "readonly",
		"VectorizeIndex": "readonly",
		"Ai": "readonly",
		"Fetcher": "readonly",
		"ExportedHandlerQueueHandler": "readonly",
		"Rpc": "readonly"
	},
	"rules": {
		"no-console": "warn",
		"typescript/no-explicit-any": "error",
		"typescript/no-non-null-assertion": "error",
		"import/no-cycle": "error"
	},
	"overrides": [
		{
			"files": ["**/logger.ts"],
			"rules": {
				"no-console": "off"
			}
		}
	],
	"ignorePatterns": ["node_modules", "dist", "*.d.ts", "opensrc", "**/drizzle/**/migrations.js"]
}
